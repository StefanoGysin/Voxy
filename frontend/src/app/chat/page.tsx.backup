'use client'

import { useState } from 'react'

export default function ChatPage() {
  const [message, setMessage] = useState('')
  const [messages, setMessages] = useState<Array<{
    id: number
    content: string
    sender: string
    timestamp: Date
  }>>([])
  
  const sendMessage = async () => {
    if (!message.trim()) return
    
    console.log('Sending:', message)
    
    // Add user message
    const userMsg = {
      id: Date.now(),
      content: message,
      sender: 'user',
      timestamp: new Date()
    }
    setMessages(prev => [...prev, userMsg])
    setMessage('')
    
    try {
      // Call backend
      const response = await fetch('http://localhost:8000/api/chat/no-auth', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          message: message,
          session_id: null
        })
      })
      
      if (response.ok) {
        const data = await response.json()
        const botMsg = {
          id: Date.now() + 1,
          content: data.response,
          sender: 'bot',
          timestamp: new Date(data.timestamp)
        }
        setMessages(prev => [...prev, botMsg])
      }
    } catch (error) {
      console.error('Failed:', error)
    }
  }
  
  return (
    <div className="h-screen bg-gray-100 p-4" data-testid="chat-page">
      <div className="bg-white border rounded-lg shadow h-full flex flex-col">
        {/* Header */}
        <div className="p-4 border-b bg-blue-50">
          <h1 className="text-xl font-bold text-gray-800">VOXY Chat - Working</h1>
          <p className="text-sm text-gray-600">Messages: {messages.length}</p>
        </div>
        
        {/* Messages */}
        <div className="flex-1 p-4 space-y-2 overflow-y-auto">
          {messages.length === 0 ? (
            <div className="text-center text-gray-500 mt-8">
              <p>No messages yet. Start a conversation!</p>
            </div>
          ) : (
            messages.map(msg => (
              <div 
                key={msg.id}
                className={`p-3 rounded-lg max-w-xs ${
                  msg.sender === 'user' 
                    ? 'bg-blue-500 text-white ml-auto' 
                    : 'bg-gray-200 text-gray-800'
                }`}
              >
                <p className="text-sm">{msg.content}</p>
                <span className="text-xs opacity-75">
                  {msg.timestamp.toLocaleTimeString()}
                </span>
              </div>
            ))
          )}
        </div>
        
        {/* Input */}
        <div className="p-4 border-t bg-gray-50">
          <div className="flex gap-2">
            <input
              type="text"
              value={message}
              onChange={(e) => setMessage(e.target.value)}
              onKeyPress={(e) => e.key === 'Enter' && sendMessage()}
              placeholder="Type your message..."
              className="flex-1 px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
            <button
              onClick={sendMessage}
              disabled={!message.trim()}
              className="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 disabled:opacity-50"
            >
              Send
            </button>
          </div>
        </div>
      </div>
    </div>
  )
}