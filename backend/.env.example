# ============================================
# VOXY Agents Environment Variables
# ============================================
# Sistema model-agnostic: ZERO hardcoded models no código
# Todos os 6 agentes (VOXY + 5 subagentes) configuráveis via .env
# Suporta 400+ modelos via LiteLLM Multi-Provider

# ============================================
# API KEYS
# ============================================

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# OpenRouter API (acesso a 400+ modelos)
OPENROUTER_API_KEY=sk-or-your_openrouter_api_key_here

# Weather API
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_here
SUPABASE_JWT_EXPIRATION_HOURS=24

# ============================================
# VOXY ORCHESTRATOR (OpenAI Agents SDK + LiteLLM)
# ============================================

ORCHESTRATOR_PROVIDER=openrouter
ORCHESTRATOR_MODEL=provider/model-name
ORCHESTRATOR_MAX_TOKENS=4000
ORCHESTRATOR_TEMPERATURE=0.3
ORCHESTRATOR_REASONING_EFFORT=medium
ORCHESTRATOR_INCLUDE_USAGE=true
ORCHESTRATOR_ENABLE_STREAMING=false

# ============================================
# CALCULATOR AGENT (LiteLLM)
# ============================================

CALCULATOR_PROVIDER=openrouter
CALCULATOR_MODEL=provider/model-name
CALCULATOR_MAX_TOKENS=2000
CALCULATOR_TEMPERATURE=0.1
CALCULATOR_INCLUDE_USAGE=true

# ============================================
# CORRECTOR AGENT (LiteLLM)
# ============================================

CORRECTOR_PROVIDER=openrouter
CORRECTOR_MODEL=provider/model-name
CORRECTOR_MAX_TOKENS=2000
CORRECTOR_TEMPERATURE=0.1
CORRECTOR_INCLUDE_USAGE=true

# ============================================
# TRANSLATOR AGENT (LiteLLM)
# ============================================

TRANSLATOR_PROVIDER=openrouter
TRANSLATOR_MODEL=provider/model-name
TRANSLATOR_MAX_TOKENS=2000
TRANSLATOR_TEMPERATURE=0.3
TRANSLATOR_INCLUDE_USAGE=true

# ============================================
# WEATHER AGENT (LiteLLM)
# ============================================

WEATHER_PROVIDER=openrouter
WEATHER_MODEL=provider/model-name
WEATHER_MAX_TOKENS=1500
WEATHER_TEMPERATURE=0.1
WEATHER_INCLUDE_USAGE=true

# ============================================
# VISION AGENT (OpenAI Agents SDK + LiteLLM)
# ============================================

VISION_PROVIDER=openrouter
VISION_MODEL=provider/model-name
# Max tokens for text output (leave empty for unlimited)
VISION_MAX_TOKENS=4000
# Max reasoning tokens (OpenRouter reasoning models only - e.g., o1, claude-sonnet-thinking)
# Lower values = faster response, Higher values = deeper analysis
# Recommended: 2000 (fast), 4000 (balanced), 8000 (deep)
VISION_REASONING_MAX_TOKENS=4000
VISION_TEMPERATURE=0.1
VISION_REASONING_EFFORT=medium
VISION_CACHE_TTL=600
VISION_INCLUDE_USAGE=true
ENABLE_VISION_POSTPROCESSING=true

# ============================================
# REASONING/THINKING CONFIGURATION
# ============================================
# Habilita captura de reasoning de múltiplos providers
# Suporta: Claude Extended Thinking, Gemini Thinking Config, OpenAI o1/reasoning, Grok/DeepSeek

# VOXY Orchestrator
ORCHESTRATOR_REASONING_ENABLED=true
ORCHESTRATOR_THINKING_BUDGET_TOKENS=10000
ORCHESTRATOR_GEMINI_THINKING_BUDGET=1024

# Vision Agent
VISION_REASONING_ENABLED=true
VISION_THINKING_BUDGET_TOKENS=8000
VISION_GEMINI_THINKING_BUDGET=1024

# Calculator Agent
CALCULATOR_REASONING_ENABLED=true

# Corrector Agent
CORRECTOR_REASONING_ENABLED=false
CORRECTOR_GEMINI_THINKING_BUDGET=512

# Translator Agent
TRANSLATOR_REASONING_ENABLED=false
TRANSLATOR_GEMINI_THINKING_BUDGET=1024

# Weather Agent
WEATHER_REASONING_ENABLED=false

# ============================================
# SYSTEM CONFIGURATION
# ============================================

# General
LOG_LEVEL=INFO
ENVIRONMENT=development

# VOXY Logging (Loguru)
VOXY_LOG_LEVEL=INFO
VOXY_ENV=development
VOXY_LOG_DIR=logs
VOXY_LOG_JSON=false

# ============================================
# VOXY LANGGRAPH CONFIGURATION (Production)
# ============================================
# LangGraph is the default and only orchestration engine

# Checkpointer Configuration
# Type: memory (non-persistent, POC/testing) | sqlite (persistent, development/production) | postgres (future, Supabase)
VOXY_CHECKPOINT_TYPE=sqlite
# Relative to backend/ directory
VOXY_CHECKPOINT_DB_PATH=data/voxy_langgraph.db

# Observability Configuration (Phase 4A)
VOXY_USAGE_TRACKING_ENABLED=true
VOXY_DETAILED_TOOL_LOGGING=true

# LiteLLM Logging (previne logs duplicados)
LITELLM_LOG=ERROR
